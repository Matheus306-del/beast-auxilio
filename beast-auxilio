<script>
const KEY_CORRETA="BEAST_AUXILIOHS";

function verificarKey(){
    const key=document.getElementById("keyInput").value;
    const erro=document.getElementById("erro");
    if(key===KEY_CORRETA){
        telaKey.style.display="none";
        painel.style.display="block";
    }else{
        erro.style.display="block";
    }
}

function toggle(el){
    el.classList.toggle("ativo");
}

function abrirFF(){
    window.location.href =
    "https://ffshare.garena.com/?region=BR&lang=pt-br";
}
</script>

